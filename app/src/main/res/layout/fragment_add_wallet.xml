<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_border"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_avatar_gray" />

                <EditText
                    android:id="@+id/edt_wallet_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:hint="Tên ví"
                    android:textStyle="bold"
                    android:textSize="28sp" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:text="Số tiền"
                android:textColor="#888888"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_wallet_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:inputType="number"
                android:hint="0 đ"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spn_wallet_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:entries="@array/wallet_categories"
                android:prompt="@string/select_wallet_type"
                android:textColor="#000000"
                android:textSize="28sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo ví"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_gradient_background"
        android:layout_marginTop="24dp" />

</LinearLayout>

