<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MoneyTracking"
            android:layout_marginRight="10dp"
            android:textColor="#00BCD4"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_money" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ sơ"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_avatar"
            android:contentDescription="Profile Picture" />

    </LinearLayout>

    <!-- User Information -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Username -->
        <TextView
            android:id="@+id/label_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/value_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="mobile_nhom11"
            android:textColor="#000000" />

        <!-- Email -->
        <TextView
            android:id="@+id/label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:layout_below="@id/value_username"
            android:layout_alignStart="@id/label_username"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/value_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/label_email"
            android:textColor="#000000" />

        <!-- Phone -->
        <TextView
            android:id="@+id/label_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textStyle="bold"
            android:layout_below="@id/value_email"
            android:layout_alignStart="@id/label_email"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/value_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0123456789"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/label_phone"
            android:textColor="#000000" />

        <!-- Full Name -->
        <TextView
            android:id="@+id/label_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textStyle="bold"
            android:layout_below="@id/value_phone"
            android:layout_alignStart="@id/label_phone"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/value_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Nhóm 11"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/label_fullname"
            android:textColor="#000000" />

        <!-- Date of Birth -->
        <TextView
            android:id="@+id/label_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textStyle="bold"
            android:layout_below="@id/value_fullname"
            android:layout_alignStart="@id/label_fullname"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/value_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/04/2024"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/label_dob"
            android:textColor="#000000" />

        <!-- Address -->
        <TextView
            android:id="@+id/label_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textStyle="bold"
            android:layout_below="@id/value_dob"
            android:layout_alignStart="@id/label_dob"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/value_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VN"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/label_address"
            android:textColor="#000000" />

    </RelativeLayout>

    <!-- Edit Button -->
    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal" />

    <!-- Change Password Link -->
    <TextView
        android:id="@+id/btn_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thay đổi mật khẩu"
        android:textColor="#15CFCF"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:padding="12dp" />

</LinearLayout>
